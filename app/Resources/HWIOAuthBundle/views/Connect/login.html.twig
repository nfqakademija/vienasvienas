<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="content-type" content="text/html;  charset=UTF-8" />
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <title>{% block title %}Welcome to Library!{% endblock %}</title>
    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('css/app.css') }}">
    {% endblock %}
</head>

{% block hwi_oauth_content %}
    <div id="login_container">
        <div id="tabbox">
            <a href="#" id="signup" class="tab signup">Signup</a>
            <a href="#" id="login" class="tab select">Login</a>
        </div>
        <div id="panel">
            <div id="loginbox">
                <a href="http://www.nfqakademija.dev/login/facebook">Facebook</a> <br>
                <a href="http://www.nfqakademija.dev/login/google">Google+</a> <br>
                {% render (controller('FOSUserBundle:Security:login')) %}

            </div>
            <div id="signupbox">
                <a href="http://www.nfqakademija.dev/login/facebook">Facebook</a> <br>
                <a href="http://www.nfqakademija.dev/login/google">Google+</a> <br>
                {% render (controller('FOSUserBundle:Registration:register')) %}
            </div>
        </div>

    </div>

{% endblock hwi_oauth_content %}
{% block javascripts %}
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    <script>window.jQuery || document.write('<script src="{{ asset('js/jquery.js') }}"><\/script>')</script>
    <script src="{{ asset('js/app.js') }}"></script>
{% endblock %}
