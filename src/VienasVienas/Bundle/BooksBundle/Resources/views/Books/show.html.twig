{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Books</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Cover</th>
                <td>{{ entity.cover|raw }}</td>
            </tr>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ entity.title }}</td>
            </tr>
            <tr>
                <th>Author</th>
                <td>{{ entity.author.author }}</td>
            </tr>
            <tr>
                <th>Pages</th>
                <td>{{ entity.pages }}</td>
            </tr>
            <tr>
                <th>Isbn</th>
                <td>{{ entity.isbn }}</td>
            </tr>
            <tr>
                <th>Rating</th>
                <td>{{ entity.rating }}</td>
            </tr>
            <tr>
                <th>About</th>
                <td>{{ entity.about|raw }}</td>
            </tr>
            <tr>
                <th>Registration date</th>
                <td>{{ entity.registrationDate|date('Y-m-d') }}</td>
            </tr>
            <tr>
                <th>Category</th>
                <td>{% for categories in entity.getCategories %}
                    {{ categories.categoryName }}
                {% endfor %}
                </td>
            </tr>
            <tr>
                <th>Quantity</th>
                <td>{{ entity.quantity}}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('book') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('book_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
    <div class="book_comments">{{ amazon_comments|raw }}</div>
    <div class="book_comments">{{ goodreads_comments|raw }}</div>
{% endblock %}
