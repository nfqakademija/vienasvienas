{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Books</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ entity.title }}</td>
            </tr>
            <tr>
                <th>Author</th>
                <td>{{ entity.author }}</td>
            </tr>
            <tr>
                <th>Pages</th>
                <td>{{ entity.pages }}</td>
            </tr>
            <tr>
                <th>Isbn</th>
                <td>{{ entity.isbn }}</td>
            </tr>
            <tr>
                <th>Rating</th>
                <td>{{ entity.rating }}</td>
            </tr>
            <tr>
                <th>About</th>
                <td>{{ entity.about }}</td>
            </tr>
            <tr>
                <th>Cover</th>
                <td>{{ entity.cover }}</td>
            </tr>
            <tr>
                <th>Registrationdate</th>
                <td>{{ entity.registrationDate|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Categoryid</th>
                <td>{{ entity.categoryId }}</td>
            </tr>
            <tr>
                <th>Isavailable</th>
                <td>{{ entity.isAvailable }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('books') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('books_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
    <div class="book_comments">{{ comments|raw }}</div>
{% endblock %}
