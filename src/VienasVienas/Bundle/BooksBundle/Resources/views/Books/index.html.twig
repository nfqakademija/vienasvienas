{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Books list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Author</th>
                <th>Pages</th>
                <th>Isbn</th>
                <th>Rating</th>
                <th>About</th>
                <th>Cover</th>
                <th>Registrationdate</th>
                <th>Categoryid</th>
                <th>Isavailable</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('books_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.title }}</td>
                <td>{{ entity.author }}</td>
                <td>{{ entity.pages }}</td>
                <td>{{ entity.isbn }}</td>
                <td>{{ entity.rating }}</td>
                <td>{{ entity.about }}</td>
                <td>{{ entity.cover }}</td>
                <td>{% if entity.registrationDate %}{{ entity.registrationDate|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.categoryId }}</td>
                <td>{{ entity.isAvailable }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('books_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('books_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('books_new') }}">
                Create a new entry
            </a>
        </li>
            <li>
                <a href="{{ path('books_new_isbn') }}">
                    Create a new entry by ISBN
                </a>
            </li>

    </ul>
    {% endblock %}
