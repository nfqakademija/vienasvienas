{% extends "BaseBundle::layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}
    <div class="login_container">

        <ul class="nav nav-tabs">
            <li class="active" style="width: 50%"><a href="#login" data-toggle="tab">Login</a></li>
            <li style="width: 50%"><a href="#register" data-toggle="tab">Sign up</a></li>
        </ul>

        <div class="tab-content">
            <div class="tab-pane fade in active" id="login">
                <ul class="list-inline">
                    <li class="left_side"><a href="./login/facebook">Facebook</a></li>
                    <li class="right_side"><a href="./login/google">Google+</a></li>
                </ul>
                <br>
                <div id="error_message"></div>
                <div id="password_reset">{{ include('BaseBundle:Resetting:request.html.twig') }}</div>
                <form id="login_form" action="{{ path("fos_user_security_check") }}" method="post">
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                    <div class="form-group">
                        <label for="username">Email:</label><br>
                        <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label for="password">Password:</label>
                        <input type="password" id="password" name="_password" required="required" class="form-control" />
                    </div>
                    <input type="checkbox" id="remember_me" name="_remember_me" value="on"  />
                    <label for="remember_me">Remember me</label><br>
                    <input type="submit" id="_submit" name="_submit" value="Login" class="btn-default btn"  />
                    <a id="forgot_password" href="#password_reset">Forgot password ?</a>
                </form>
            </div>
            <div class="tab-pane fade" id="register">
                <ul class="list-inline">
                    <li class="left_side"><a href="./login/facebook">Facebook</a></li>
                    <li class="right_side"><a href="./login/google">Google+</a></li>
                </ul>
                <br>
                <div>
                    {% render (controller('FOSUserBundle:Registration:register')) %}
                </div>
            </div>
        </div>
    </div>
{% endblock fos_user_content %}

